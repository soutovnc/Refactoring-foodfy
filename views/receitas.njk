{% extends "layout.njk" %}

{% block content %}
    <main>
        <div class="content">

            {% for item in items %}
            <div class="card" id="{{item.id}}">
                <img src="{{item.image}}" alt="{{item.title}}">
                <h4 class="card_title">{{item.title}}</h4>
                <p class="card_author">{{item.author}}</p>
            </div>
            {% endfor %}

        </div>
    </main>
</div>

<footer>
    Todos direitos reservados, receitas Foodfy.
</footer>

<script src="/scripts.js"></script>
{% endblock %}